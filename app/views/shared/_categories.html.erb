<%= content_tag :li do %>
  <span class="handle"><%=link_to menu.name, "#{categories_url}/#{menu.friendly_id}" %></span>    
  <%= content_tag :ul, :class => "sublist" do %>
   <% menu.children.each do |child| %>
    <%= render :partial => "shared/categories", :locals => {:menu => child }%>
   <% end %>
  <% end unless menu.leaf? %>
 <% end %>
