<!DOCTYPE html>
<html>
	<head>
		<title>m-store</title>
		<%= stylesheet_link_tag :all %>
		<%= javascript_include_tag :defaults %>
		<%= javascript_include_tag "jquery.fancybox-1.3.4.pack" %>
		<%= javascript_include_tag "simpleCart" %>
		<%= javascript_include_tag "simpleCart.config" %>
		<%= csrf_meta_tag %>
	</head>
	<body>
		<div id="wrap">
	    <div class="header">
	    	<div class="logo">
					<a href="/"><img src="/images/logo.gif" alt="" title="" border="0" /></a>
				</div>            
				<div id="menu">
	      	<ul>                                                                       
	        	<li><a href="/">In√≠cio</a></li>
						<li><a href="/about">Sobre a loja</a></li>
						<li><a href="/products">Produtos</a></li>
						<li><a href="/specials">Pedidos personalizados</a></li>
						<li><a href="/cart">Meu carrinho</a></li>
						<li><a href="/contact">Contato</a></li>
	      	</ul>
				</div>     
			</div>
			<div class="center_content">
				<div class="left_content">
					<%= yield %>	
	        <div class="clear"></div>
        </div>

        <div class="right_content">
					<div class="cart">
						<div class="title"><span class="title_icon"><img src="/images/cart.gif" alt="" title="" /></span>Meu carrinho</div>
						<p><span class="total_cart">Total: <span class="simpleCart_total"></span></span><a href="cart" class="view_cart">ver carrinho</a></p>
						<br class="clear" />
					</div>
					<div class="right_box">
						<div class="title">
							<span class="title_icon"><img src="/images/bullet5.gif" alt="" title="" /></span>Produtos
						</div>
                  
                  
						<ul class="list">
                     <% @categories.each do |category| %>
                        <%= render :partial => "shared/categories", :locals => { :menu => category } %> 
                     <% end %>                                            
						</ul>
						     
					</div>         
				</div>      
				<div class="clear"></div>
			</div>
			<div class="footer">
				<div class="left_footer">
					<img src="/images/footer_logo.gif" alt="" title="" /><br /> <a href="http://csscreme.com/freecsstemplates/" title="free templates"><img src="/images/csscreme.gif" alt="free templates" title="free templates" border="0" /></a>
				</div>
				<div class="right_footer">
					<a href="#">home</a>
					<a href="#">about us</a>
					<a href="#">services</a>
					<a href="#">privacy policy</a>
					<a href="#">contact us</a>
				</div>
			</div>
		</div>
	</body>
</html>
